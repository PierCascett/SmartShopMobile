{
  "openapi": "3.0.3",
  "info": {
    "title": "SmartShop Backend API",
    "version": "1.0.0",
    "description": "Documentazione Swagger per le route del backend SmartShop Mobile. Usa \"Try it out\" per eseguire le chiamate verso il server Express."
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Server locale (default PORT)"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "responses": {
          "200": {
            "description": "Stato del server"
          }
        }
      }
    },
    "/api/categorie": {
      "get": {
        "summary": "Elenco categorie",
        "description": "Ritorna tutte le categorie con sovracategoria e conteggio prodotti.",
        "responses": {
          "200": {
            "description": "Lista categorie"
          }
        }
      }
    },
    "/api/categorie/macro": {
      "get": {
        "summary": "Elenco macro categorie",
        "responses": {
          "200": {
            "description": "Lista macro categorie"
          }
        }
      }
    },
    "/api/categorie/{parentId}/sottocategorie": {
      "get": {
        "summary": "Sottocategorie per sovracategoria",
        "parameters": [
          {
            "in": "path",
            "name": "parentId",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID della sovracategoria"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista sottocategorie"
          }
        }
      }
    },
    "/api/prodotti": {
      "get": {
        "summary": "Elenco prodotti",
        "responses": {
          "200": {
            "description": "Lista prodotti"
          }
        }
      }
    },
    "/api/prodotti/categoria/{categoryId}": {
      "get": {
        "summary": "Prodotti per categoria",
        "parameters": [
          {
            "in": "path",
            "name": "categoryId",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID categoria"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista prodotti filtrati"
          }
        }
      }
    },
    "/api/prodotti/search": {
      "get": {
        "summary": "Cerca prodotti",
        "parameters": [
          {
            "in": "query",
            "name": "q",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Termine di ricerca (nome o marca)"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista prodotti corrispondenti"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "Login utente",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": [
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Dati utente autenticato"
          },
          "401": {
            "description": "Credenziali non valide"
          }
        }
      }
    },
    "/api/auth/register": {
      "post": {
        "summary": "Registrazione utente",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string"
                  },
                  "cognome": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "telefono": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "ruolo": {
                    "type": "string",
                    "description": "Default Cliente"
                  }
                },
                "required": [
                  "nome",
                  "cognome",
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Utente creato"
          },
          "409": {
            "description": "Email gi√† registrata"
          }
        }
      }
    },
    "/api/auth/profile/{userId}": {
      "patch": {
        "summary": "Aggiorna profilo utente",
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string"
                  },
                  "cognome": {
                    "type": "string"
                  },
                  "telefono": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Profilo aggiornato"
          }
        }
      }
    },
    "/api/auth/profile/{userId}/photo": {
      "post": {
        "summary": "Carica foto profilo",
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "photo": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": [
                  "photo"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "URL avatar aggiornato"
          }
        }
      }
    },"/api/ordini": {
      "get": {
        "summary": "Elenco ordini",
        "responses": {
          "200": {
            "description": "Lista ordini con righe"
          }
        }
      },
      "post": {
        "summary": "Crea ordine cliente",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "idUtente": {
                    "type": "integer"
                  },
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "idProdotto": {
                          "type": "integer"
                        },
                        "quantita": {
                          "type": "integer"
                        }
                      },
                      "required": [
                        "idProdotto",
                        "quantita"
                      ]
                    }
                  },
                  "metodoConsegna": {
                    "type": "string",
                    "description": "LOCKER o DOMICILIO"
                  },
                  "indirizzoSpedizione": {
                    "type": "string"
                  }
                },
                "required": [
                  "idUtente",
                  "items"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Ordine creato"
          },
          "409": {
            "description": "Stock insufficiente o errore"
          }
        }
      }
    },
    "/api/ordini/{orderId}": {
      "patch": {
        "summary": "Aggiorna stato ordine",
        "parameters": [
          {
            "in": "path",
            "name": "orderId",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "stato": {
                    "type": "string",
                    "description": "CREATO, SPEDITO, CONSEGNATO, ANNULLATO, CONCLUSO"
                  },
                  "idRider": {
                    "type": "integer"
                  }
                },
                "required": [
                  "stato"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ordine aggiornato"
          }
        }
      }
    },
    "/api/riordini": {
      "get": {
        "summary": "Elenco riordini magazzino",
        "responses": {
          "200": {
            "description": "Lista riordini"
          }
        }
      },
      "post": {
        "summary": "Crea riordino",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "idProdotto": {
                    "type": "integer"
                  },
                  "idFornitore": {
                    "type": "integer"
                  },
                  "quantitaOrdinata": {
                    "type": "integer"
                  },
                  "dataArrivoPrevista": {
                    "type": "string",
                    "format": "date-time"
                  },
                  "idResponsabile": {
                    "type": "integer"
                  }
                },
                "required": [
                  "idProdotto",
                  "idFornitore",
                  "quantitaOrdinata"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Riordino creato"
          }
        }
      }
    },
    "/api/riordini/processa-arrivi": {
      "post": {
        "summary": "Processa arrivi previsti",
        "responses": {
          "200": {
            "description": "Elaborazione completata"
          }
        }
      }
    },
    "/api/riordini/{id}/arrivo": {
      "patch": {
        "summary": "Marca riordino come arrivato",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "arrivedAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp di arrivo (opzionale, default NOW)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Riordino aggiornato"
          }
        }
      }
    },
    "/api/fornitori": {
      "get": {
        "summary": "Elenco fornitori",
        "responses": {
          "200": {
            "description": "Lista fornitori"
          }
        }
      }
    },
    "/api/scaffali": {
      "get": {
        "summary": "Elenco scaffali",
        "responses": {
          "200": {
            "description": "Lista scaffali"
          }
        }
      }
    },
    "/api/scaffali/{id}": {
      "get": {
        "summary": "Dettaglio scaffale",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Dati scaffale"
          },
          "404": {
            "description": "Scaffale non trovato"
          }
        }
      }
    },
    "/api/scaffali/{id}/prodotti": {
      "get": {
        "summary": "Prodotti per scaffale",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista prodotti sullo scaffale"
          }
        }
      }
    },
    "/api/magazzino/trasferisci": {
      "post": {
        "summary": "Trasferisci stock dal magazzino allo scaffale",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "idProdotto": {
                    "type": "string"
                  },
                  "quantita": {
                    "type": "integer"
                  },
                  "idScaffale": {
                    "type": "integer"
                  }
                },
                "required": [
                  "idProdotto",
                  "quantita",
                  "idScaffale"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Trasferimento completato"
          },
          "409": {
            "description": "Quantita insufficiente"
          }
        }
      }
    },
    "/api/magazzino/riconcilia-arrivi": {
      "post": {
        "summary": "Riconcilia magazzino con arrivi",
        "responses": {
          "200": {
            "description": "Riconciliazione completata"
          }
        }
      }
    }
  }
}